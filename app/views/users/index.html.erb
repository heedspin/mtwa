<% title "Users" %>

<%= link_to 'New User', new_user_path %>

<table class="data">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Email</th>
      <th>Status</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.full_name, user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= user.user_role.name %></td>
      <td><%= user.user_status.name %></td>
      <td>
				<% links = [] %>
				<% if permitted_to? :manage, :users %>
				<% links.push link_to("Edit", edit_user_path(user)) %> 
				<% end %>
				<%= raw links.join(' | ')%>
			</td>
    </tr>
  <% end %>
  </tbody>
</table>
