<% title 'News Item' %>

<% semantic_form_for @news_item, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <%= render :partial=>'form', :locals =>{:f=>f} %>
  <% f.buttons do %>
    <%= f.commit_button 'Save' %>
    <%= f.commit_button 'Save & Edit' %>
    <li class="link"><%= link_to 'Cancel', (params[:return_to] || news_items_url) %></li>
  <% end %>
<% end %>
